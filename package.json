{
  "name": "@joshtwc/bonjour",
  "version": "4.0.5",
  "description": "A from-scratch, bonjour-like (mDNS + DNS-SD) library built on multicast-dns. Active discovery, proper goodbyes, self-ignore by TXT id, Windows-friendly.",
  "keywords": [
    "bonjour",
    "zeroconf",
    "mdns",
    "dns-sd",
    "multicast",
    "service-discovery",
    "electron",
    "windows"
  ],
  "homepage": "https://github.com/joshtwc/bonjour#readme",
  "bugs": {
    "url": "https://github.com/joshtwc/bonjour/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshtwc/bonjour.git"
  },
  "license": "ISC",
  "author": "Josh Wood",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format cjs,esm --dts --minify --sourcemap --clean --out-dir dist --target node18",
    "dev": "tsup src/bonjour.ts --format cjs,esm --dts --watch --sourcemap --out-dir dist --target node18",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run build",
    "test": "node -e \"console.log('no tests yet')\""
  },
  "devDependencies": {
    "@types/multicast-dns": "^7.2.4",
    "@types/node": "^24.3.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.1.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "multicast-dns": "^7.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}